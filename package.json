{
    "name": "@iwharris/typescript-starter",
    "version": "0.0.1",
    "description": "Typescript Starter",
    "main": "dist/index.js",
    "scripts": {
        "compile": "tsc",
        "prettier": "prettier --check {src,test}/**/*.[jt]s",
        "prettier:fix": "prettier --write {src,test}/**/*.[jt]s",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --coverage --json --outputFile=coverage/jest.results.json",
        "watch": "tsc -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iwharris/typescript-starter.git"
    },
    "keywords": [
        "typescript",
        "starter",
        "template"
    ],
    "author": "Ian Harris",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/iwharris/typescript-starter/issues"
    },
    "homepage": "https://github.com/iwharris/typescript-starter#readme",
    "devDependencies": {
        "@iwharris/eslint-config": "latest",
        "@iwharris/prettier-config": "latest",
        "@types/jest": "^26.0.20",
        "@typescript-eslint/eslint-plugin": "^4.29.1",
        "eslint": "^7.32.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "prettier": "^2.3.2",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.5"
    }
}
